+int wait_phy_rw_not_busy(int phy_no)
+{
+
+	int reg = sf_readl(get_mii_cmd_addr(phy_no));
+	// wait for GMII Register GB is not busy
+	while(reg & GMII_ADDR_MASK_GB){
+		reg = sf_readl(get_mii_cmd_addr(phy_no));
+	}
+	return reg;
