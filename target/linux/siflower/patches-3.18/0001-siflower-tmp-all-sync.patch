+/*
+ * SPDIF control structure
+ * Defines channel status, subcode
+ */
+struct spdif_mixer_control {
+	/* spinlock to access control data */
+	spinlock_t ctl_lock;
+
+	/* IEC958 channel tx status bit */
+	unsigned char ch_status[24];
+
+	/* User bits */
