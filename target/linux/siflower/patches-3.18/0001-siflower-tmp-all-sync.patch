+static int __init fw_memtype_classify(unsigned int type)
+{
+	switch (type) {
+	case fw_free:
+		return BOOT_MEM_RAM;
+	case fw_code:
+		return BOOT_MEM_ROM_DATA;
+	default:
+		return BOOT_MEM_RESERVED;
+	}
+}
