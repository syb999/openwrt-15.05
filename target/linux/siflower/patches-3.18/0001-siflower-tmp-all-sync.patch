+pad_func sfax8_pad_get_func(struct sfax8_pinctrl *info, u32 index)
+{
+	int tmp;
+	int fun_cnt = 0;
+	int fun_num = 0;
+	int mod_cnt = 0;
+	int mod_num = 0;
+	u32 gpio_base = (u32)info->base;
