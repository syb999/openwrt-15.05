+			continue;
+		}
+		rt[i].regulator = rg;
+		if(!strcmp(name, "dcdc3"))
+			strcpy(rt[i].name, "core");
+		else
+			strcpy(rt[i].name, name);
+
+		sprintf(vname, "%s-default-uv", name);
+		dev_dbg(&pdev->dev, "Num %d: default uv name is %s", i, vname);
