+	unsigned int irq_nr = data->irq - MIPS_GIC_IRQ_BASE;
+	int trigger = GIC_TRIG_LEVEL;
+	int polarity = GIC_POL_POS;
+	if (flow_type & IRQF_TRIGGER_PROBE)
