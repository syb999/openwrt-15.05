+			return 0;
+		}
+		cmd_done = sf_readl(status_reg);
+		udelay(10);
+		i++;
+	} /*End of while loop*/
+	/* Clear Status Reg */
+	sf_writel( CLR_STATUS_REG,status_reg);
+	return cmd_done;
