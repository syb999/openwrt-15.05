+	}
+
+	for (i = 0; i < sfax8_switch->max_port_num; i++) {
+		addr1 = get_port_address(i,1);
+		/* class hw port csr reg:
+		 *======================================================*
+		 *res |block_state |aft |shutdown |fallback_bd_id |tpid *
+		 *======================================================*
+		 *20-bit| 4-bit   |4-bit| 1-bit   | 16-bit      |16-bit *
+		 *=====================================================*/
+		entry = sf_readl(addr1);
