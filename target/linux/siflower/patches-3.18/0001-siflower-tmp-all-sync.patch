+		switch((tmp & (0x11 <<mod_num)) >> mod_num)
+		{
+			case 0:
+			return FUNC0;
+			break;
+
+			case 1:
+			return FUNC1;
+			break;
+
+			case 2:
+			return FUNC2;
+			break;
+
