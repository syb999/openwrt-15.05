+			goto fin;
+		}
+		i += TOTAL_DCDC;
+	} else {
+		if(strcmp("dcdc", rg_n) == 0) {
+		#ifndef CONFIG_MFD_SFAX8_RN5T567
+			if (i >= TOTAL_DCDC){
+		#else
+			if (i > TOTAL_DCDC){
+		#endif
