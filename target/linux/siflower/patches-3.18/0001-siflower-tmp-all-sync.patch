+					polarity = GIC_POL_POS;
+					break;
+				}
+			case IRQF_TRIGGER_FALLING:
+				{
+					trigger = GIC_TRIG_EDGE;
+					polarity = GIC_POL_NEG;
+					break;
+				}
+			case IRQF_TRIGGER_HIGH:
