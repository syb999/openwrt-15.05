+		tmp &= ~(1 << num);
+		regmap_write(regmap_base, PAD_IO_PULLUP(cnt), tmp);
+
+		regmap_read(regmap_base, PAD_IO_PULLDOWN(cnt), &tmp);
+		tmp &= ~(1 << num);
+		regmap_write(regmap_base, PAD_IO_PULLDOWN(cnt), tmp);
+		break;
+
+		case PULLUP:
+		regmap_read(regmap_base, PAD_IO_PULLDOWN(cnt), &tmp);
+		tmp &= ~(1 << num);
+		regmap_write(regmap_base, PAD_IO_PULLDOWN(cnt), tmp);
+
+		regmap_read(regmap_base, PAD_IO_PULLUP(cnt), &tmp);
+		tmp |= (1 << num);
+		regmap_write(regmap_base, PAD_IO_PULLUP(cnt), tmp);
+		break;
+
+		case PULLDOWN:
+		regmap_read(regmap_base, PAD_IO_PULLUP(cnt), &tmp);
+		tmp &= ~(1 << num);
+		regmap_write(regmap_base, PAD_IO_PULLUP(cnt), tmp);
+
+		regmap_read(regmap_base, PAD_IO_PULLDOWN(cnt), &tmp);
+		tmp |= (1 << num);
+		regmap_write(regmap_base, PAD_IO_PULLDOWN(cnt), tmp);
+		break;
+
+		default:
+		return -EINVAL;
+		break;
+	}
+
