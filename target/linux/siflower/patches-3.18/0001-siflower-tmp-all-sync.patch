+int  hash_table_config_done(int type) {
+	uint status_reg = 0;
+	int cmd_done = 0;
+	int i = 0;
+	if(type == MAC_TABLE)
+	  status_reg  = REQ_STATUS_REG;
+	else if(type == VLAN_TABLE)
+	  status_reg  = REQ_VLAN_STATUS_REG;
+	else
+	  return 0;
