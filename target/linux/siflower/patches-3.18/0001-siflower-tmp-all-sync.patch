+			}
+		}
+	}
+
+
+	for (i = TOTAL_DCDC; i < TOTAL_DCDC + TOTAL_LDO; i++){
+		//ldo3 not used.
+		sprintf(name, "ldo%d", i - TOTAL_DCDC + 1);
+		dev_dbg(&pdev->dev, "Num %d : name is %s", i, name);
