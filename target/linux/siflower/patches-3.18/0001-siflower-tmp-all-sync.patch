+				goto fin;
+			}
+		} else {
+			pr_err("wrong regulator name\n");
+			goto fin;
+		}
+	}
+
+	#ifdef CONFIG_MFD_SFAX8_RN5T567
+	i = i - 1;
+	#endif
+
+	if (value > rt[i].max_v){
+		pr_err("voltage is over max\n");
+		goto fin;
