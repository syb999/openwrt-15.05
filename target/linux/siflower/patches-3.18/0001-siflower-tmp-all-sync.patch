+{
+	struct sgmac_priv *priv = netdev_priv(ndev);
+	int ret = -EOPNOTSUPP;
+
+	if (!netif_running(ndev))
+		return -EINVAL;
+
+	switch (cmd) {
+	case SIOCGMIIPHY:
+	case SIOCGMIIREG:
+	case SIOCSMIIREG:
+		if (!priv->phydev)
+			return -EINVAL;
+		ret = phy_mii_ioctl(priv->phydev, ifr, cmd);
+		break;
+	case SIOCSHWTSTAMP:
+		ret = sgmac_ptp_hwtstamp_ioctl(ndev, ifr);
