+	if(strcmp("ldo", rg_n) == 0) {
+		#ifndef CONFIG_MFD_SFAX8_RN5T567
+		if ((i >= TOTAL_LDO) || (i == 3)){
+		#else
+		if (i > TOTAL_LDO){
+		#endif
