+static int es8388s_mute(struct snd_soc_dai *dai, int mute)
+{
+	struct snd_soc_codec *codec = dai->codec;
+	unsigned char val = 0;
+
+	val = snd_soc_read(codec, ES8388s_DAC_MUTE);
+	if (mute){
+		val |= 0x04;
+	} else {
+		val &= ~0x04;
+	}
+
+	snd_soc_write(codec, ES8388s_DAC_MUTE, val);
+
+	return 0;
+}
