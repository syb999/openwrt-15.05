+	fun_cnt = index / 8;
+	fun_num = index % 8;
+	mod_cnt = index / PAD_PER_GROUP_PINS;
+	mod_num = index / PAD_PER_GROUP_PINS;
+
+	regmap_read(info->regmap_base, PAD_FUCN_SEL(fun_cnt), &tmp);
+	if (tmp & (1 << fun_num))
+	{
+		tmp = readb((void *)(GPIO_DIR(index) + gpio_base));
+		if (tmp)
+			return GPIO_OUTPUT;
+		else
