+static void sfax8_lcd_enable(struct sfax8_fb *sfb, int enable)
+{
+	u32 lcdcon1 = readl(sfb->regs + LCDCON1);
+
+	if (enable)
+		lcdcon1 |= 0x1 << LCDCON1_ENVID;
+	else
