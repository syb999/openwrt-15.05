+		write_fasw_context_memory(write_val, que->tlcq_classq_id,
+				que->tlcq_dev_id,
+				CURQ_HW_PROB_CFG_TBL1);
+
+	}
+
+	/*Add queue to scheduler*/
+	tmu_add_queue2scheduler(que);
+
+	return 0;
+}
